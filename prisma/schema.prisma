generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Area {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  processes ProcessesInAreas[]
}

model Process {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  areas ProcessesInAreas[]
  parentProcess ProcessFamily[]  @relation("parentProcess")
  childProcess ProcessFamily[] @relation("childProcess")
}

model ProcessFamily{
  parentProcess Process  @relation("parentProcess", fields: [parentProcessId], references: [id])
  parentProcessId Int
  childProcess Process @relation("childProcess", fields: [childProcessId], references: [id])
  childProcessId Int
  toolLink String

  @@id([parentProcessId, childProcessId])
}

model ProcessesInAreas{
  @@id([areaId, processId])

  area Area @relation(fields: [areaId], references: [id])
  areaId Int
  process Process @relation(fields: [processId], references: [id])
  processId Int
  toolLink String
}